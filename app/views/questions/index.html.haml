%h1 Listing questions

#tag_cloud
  - tag_cloud Question.tag_counts, %w(label) do |tag, css_class|
    = link_to tag.name, questions_tags_path(tag.name), class: css_class

%table
  %tr
    %th id
    %th Title
    %th Content
    %th Code
    %th Error
    %th Anonymous
    %th User_id
    %th
    %th
    %th
    %th
  - @questions.each do |question|
    %tr
      %td= question.id
      %td= question.title
      %td= question.content
      %td= question.code
      %td= question.error
      %td= question.anonymous
      %td= anonymous_user?( question )
      %td= pluralize(question.comments.count, "Answers")
      %td= link_to 'Show', question
      %td= link_to 'Edit', edit_question_path(question)
      %td= link_to 'Destroy', question, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Question', new_question_path
