= simple_form_for(@question) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :content
    = f.input :code
    = f.input :error
    = f.input :tag_list
    = f.input :anonymous 

  %table
    %tr
      %td Name
      %td ID
    - @experts.each do |expert|
      %tr
        %td= expert.name
        %td= expert.id

  = f.simple_fields_for(:notifications) do |g|
    .form-inputs
      = g.input :user_id
      = g.input :content

  .form-actions
    = f.button :submit