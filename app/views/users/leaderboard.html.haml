.row
  .span8.offset2
    %legend
      %h1='Leader Board'
    .row
      .span8
        %table.table.table-hover
          %thead
            %tr
              %th='#'
              %th='Name'
              %th='Answers'
              %th='Questions'
              %th='Contributions'
              %th='Points'
          -rank = 0
          -@users.each do |user|
            -rank = rank +  1
            =render 'row_user', user: user, rank: rank, length: @users.length
            