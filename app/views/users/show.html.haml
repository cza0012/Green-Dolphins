.row
  .span8.offset2
    .well
      .row
        .span8
          %h4 #{@user.name}
          - if current_user.has_role? :admin
            %h5 #{@user.email}
        .span4
          %h5 School
          #{@user.school}
        .span3
          %h1 #{@user.points} Points
      .row
        .span2
          %h5 Level 
          #{@user.level}
        .span2
          %h5 Role 
          #{user_role(@user)}
        .span2
          - if current_user.has_role? :admin
            %h5 Z-Scores 
            #{@user.z_scores}
      .row
        .span8
          %h5 Expert tags
          #{user_tag_list(@user)}
.row
  .span8.offset2
    / =render 'questions/question_feed'
    =render 'user_feed'
