%div{ id: "notification_#{notification.id}"}
  .row
    .span4
      - reply = Reply.find(notification.sendable_id)
      - question = reply.comment.question
      - user = reply.comment.user
      %p
        %i.icon-exclamation-sign
        Your friend replied in the question below.
    .span2
      = time_ago_in_words(notification.created_at) + ' ago'
    .span2
      = read_link(notification)
  .row
    .span8
      %p
        = link_to question.title, question
  .row
    .span8
      %hr